<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgBlue"
        android:orientation="vertical"
        android:paddingBottom="50sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="0sp">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                card_view:cardCornerRadius="100dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar"></ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="John Doe"
                android:fontFamily="@font/lemon_milk"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="10dp"></TextView>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:onClick="editBio"
                android:outlineProvider="none"
                app:srcCompat="@drawable/ic_baseline_edit_24"
                android:layout_marginRight="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20sp"
            android:paddingVertical="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="left"
                android:text="Guild:"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CS 465"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="10sp">
            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="1.3"
                android:gravity="left|center_vertical"
                android:scrollbarSize="4dp"
                android:text="Stats:"
                android:textSize="24sp"
                android:textColor="@color/white">
            </TextView>

            <TextView
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:scrollbarSize="4dp"
                android:text="200XP"
                android:textSize="24sp"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="10sp">
            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="1.4"
                android:gravity="left|center_vertical"
                android:scrollbarSize="4dp"
                android:text="Discord:"
                android:textSize="24sp"
                android:textColor="@color/white">
            </TextView>

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:scrollbarSize="4dp"
                android:text="@johndoe"
                android:textSize="24sp"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="10sp">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="6"
                android:gravity="left|center_vertical"
                android:scrollbarSize="4dp"
                android:text="Bio:"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:paddingBottom="10sp">
            </TextView>

            <TextView
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:scrollbarSize="4dp"
                android:text="Hi my name is John Doe!My goal this year is to be more sustainable! Looking foward to meeting new people with the same goal. Reach out to me on Discord!"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:paddingLeft="30sp">
            </TextView>
        </LinearLayout>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>