<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="top"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_height="70dp"
                    android:layout_width="100dp"
                    android:src="@drawable/avatar">
                </ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="300dp"
                    android:id="@+id/title"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lemon_milk"
                    android:gravity="left"
                    android:text="John Doe\nLevel 10\nXP 200"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="138dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:src="@drawable/xp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:background = "@drawable/map"
                android:orientation="vertical">

                <Button
                    android:id="@+id/recycle_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    ></Button>

                <Button
                    android:id="@+id/home_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">
                </Button>
                <Button
                    android:id="@+id/transportation_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">
                </Button>
                <Button
                    android:id="@+id/alma_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:onClick="LocationListingActivity">
                </Button>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>


